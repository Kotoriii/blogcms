<section class="formcontainer newarticle">
<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
<div class="field">
	<%= f.label :author_name, "Your Name" %>
	<%= f.text_field :author_name %>
</div>
<div class="field">
	<%= f.label :body, "Your Comment" %>
	<%= f.text_area :body, id:"comment_body" %>
</div>
<p>
	<%= f.submit 'Submit' %>
</p>
<% end %>
</section>